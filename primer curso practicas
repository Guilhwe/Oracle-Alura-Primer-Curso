('1045236','Viveiros','PET','1 LITRO', 'MANZANA', 40.20);+


MAS VENDEDORES CONCATENADO VALORES

INSERT INTO VENDEDORES(
ID_VENDEDOR, NOMBRE, FECHA_ADMISION, PORCENTAJE_COMISION)
VALUES
('00400','Maria Rosario Quintana,','23/07/2012',0.15),
('00810','Antonio Montana Dominguez','14/12/2016',0.18),
('00414','Carlos Mora Moreira','13/11/2015',4);

ACTUALIZACION DE UN DATO DE UN PRODUCTO

UPDATE PRODUCTOS SET ENVOLTORIO = 'Lata' WHERE ID_PRODUCTO ='1045234';         //Actualiza TABLA ESTABLECE COLUMNA = VALOR DONDE COLUMNA=VALOR

ACTUALIZA LOS VENDEDORES PARA QUE LOS VENDEDORES MAS ANTIGUOS NO PUEDEAN TENER MENOS COMISION DE LOS MAS NUEVOS E LOS QUE LA TENGAN MAYOR QUE NO PIERDAN SU COMISION

UPDATE VENDEDORES SET PORCENTAJE_COMISION = 0.18 
WHERE ID_VENDEDOR IN ('00233', '00400', '00414');

EXCLUIR UN PRODUCTO Y UN VENDEDOR

DELETE FROM PRODUCTO WHERE PRODUCTO ID ='1037797';
DELETE FROM VENDEDORES WHERE VENDEDOR_ID ='00233';
